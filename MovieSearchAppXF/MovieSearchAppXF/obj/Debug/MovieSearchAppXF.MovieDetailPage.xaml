<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieSearchAppXF.MovieDetailPage"
             Title="Movie details">

	<Grid Padding="10">
			<Label Grid.Row="0"
				Text="{Binding Name}" />
			<Label Grid.Row="1"
				Text="{Binding ReleaseYear}" />
			<Label Grid.Row="2"
				Text="{Binding Genre}" />
			<Label Grid.Row="3"
				Text="{Binding Runtime}" />
			<Label Grid.Row="4"
				Text="{Binding Overview}" />
	</Grid>
</ContentPage>
